---
layout: /layouts/base.njk
---

{% set categorySlug = title | slug %}

<div class="video-item--wrapper">
  {% for video in collections.videos | categoryFilter(categorySlug) | reverse %}
    <div class="video-item">
      <div class="video-item--proportional">
        {{ video.data.code | safe }}
      </div>
      <h3 class="video-item--title">{{ video.data.title }}</h3>
    </div>
  {% endfor %}
</div>